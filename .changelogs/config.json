{
  "changelog": {
    "version": "1.0.0",
    "publishSchedule": "0 9 * * 1",
    "publishScheduleDescription": "Every Monday at 9 AM UTC (bi-weekly)",
    "entriesDir": ".changelogs/entries",
    "publishedDir": ".changelogs/published",
    "outputDir": "docs/changelog",
    "urlMappings": {
      "docs/": "/docs/",
      "reference/": "/docs/api-docs/",
      "guides/": "/docs/guides/"
    },
    "changeTypes": [
      {
        "type": "added",
        "label": "‚ú® Added",
        "description": "New documentation or features"
      },
      {
        "type": "changed",
        "label": "üìù Changed",
        "description": "Updates to existing documentation"
      },
      {
        "type": "deprecated",
        "label": "‚ö†Ô∏è Deprecated",
        "description": "Documentation marked as deprecated"
      },
      {
        "type": "removed",
        "label": "üóëÔ∏è Removed",
        "description": "Removed documentation or features"
      },
      {
        "type": "fixed",
        "label": "üêõ Fixed",
        "description": "Bug fixes or corrections"
      },
      {
        "type": "security",
        "label": "üîí Security",
        "description": "Security-related updates"
      }
    ],
    "validation": {
      "minTitleLength": 10,
      "maxTitleLength": 200,
      "minDescriptionLength": 20
    },
    "automation": {
      "requireChangelogOnPRs": true,
      "skipChangelogLabel": "skip-changelog",
      "autoSuggestOnPR": true,
      "createPublishPR": true,
      "publishPRLabels": ["changelog", "documentation"]
    }
  }
}
